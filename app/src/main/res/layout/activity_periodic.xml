<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PeriodicActivity">

    <EditText
        android:id="@+id/repeat_interval"
        android:hint="Repeat Interval (unit: minutes, min value is 15)"
        android:inputType="number"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <EditText
        android:id="@+id/flex_interval"
        android:hint="Flex Interval (unit: minutes, min value is 5)"
        android:gravity="center"
        android:inputType="number"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <TextView
        android:id="@+id/start"
        android:text="Start"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="200dp"
        android:layout_height="56dp"/>

</LinearLayout>